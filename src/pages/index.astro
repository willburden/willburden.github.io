---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

const posts = await getCollection("blog");
---

<BaseLayout>
	<h1>Posts</h1>
	<ul>
		{posts.map((post) => (
			<li><a href={`/post/${post.id}`}>
				{post.data.title} ({post.data.pubDate.toDateString()})
			</a></li>
		))}
	</ul>
</BaseLayout>
