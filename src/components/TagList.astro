---
interface Props {
    tags: string[],
}

const { tags } = Astro.props;
---

{tags.length > 0 &&
    <div>
        {tags.map(tag => (
            <span><a href={`/tag/${tag}`}>{tag}</a></span>
        ))}
    </div>
}

