---
interface Props {
    links: {
        text: string,
        href: string,
    }[],
}

const { links } = Astro.props;
---

{links.length > 0 &&
    <div>
        {links.map(({ text, href }) => (
            <span><a {href}>{text}</a></span>
        ))}
    </div>
}

