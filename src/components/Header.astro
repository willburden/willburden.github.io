---
import BearIcon from "./icons/BearIcon.astro";
---

<header>
    <a href="/">
        <BearIcon />
        <div class="logo-text">
            <span>will</span>
            <span>burden</span>
        </div>
    </a>
</header>

<style lang="scss">
	@use '../styles/_tokens' as *;

	header {
		padding: $space-md 0;
		margin-block-end: calc($space-lg - $space-md);
		
		a {
			display: flex;
			align-items: end;
			
			text-decoration: none;
			font-size: $size-lg;

			div {
				align-self: stretch;
				margin-left: $space-xs;

				display: flex;
				flex-direction: column;
				justify-content: end;
				
				line-height: $size-md;
				font-weight: bold;
				vertical-align: baseline;
				color: $color-primary;

				span {
					display: block;
				}

				:last-child {
					color: $color-primary-dark;
				}
			}
		}
	}
</style>
